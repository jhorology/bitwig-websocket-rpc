{
  "name": "bitwig-websocket-rpc",
  "version": "0.2.0-SNAPSHOT",
  "description": "JSON-RPC 2.0 implementation over WebSockets for Bitwig Studio.",
  "main": "index.js",
  "scripts": {
    "debug": "mvn/debug.sh",
    "dev:build:extension-api-8": "cd mvn && mvn package",
    "dev:build:extension-api-9": "cd mvn && mvn -P extension-api-9 clean package",
    "dev:build:extension-api-10": "cd mvn && mvn -P extension-api-10 clean package",
    "dev:build:browser-test": "mkdir -p test/build && browserify -t coffeeify --extension=\".coffee\" test/test-suite.coffee > test/build/test-suite.js",
    "dev:install": "bin/bws-rpc install --api 10",
    "dev:build": "npm-run-all --sequential dev:build:**",
    "dev": "npm-run-all --sequential dev:build dev:install debug",
    "prod:build:extension-api-8": "cd mvn && mvn -P production clean package",
    "prod:build:extension-api-9": "cd mvn && mvn -P production,extension-api-9 clean package",
    "prod:build:extension-api-10": "cd mvn && mvn -P production,extension-api-10 clean package",
    "prod:build": "npm-run-all --sequential prod:build:**",
    "prod:install": "bin/bws-rpc install --api 8",
    "test:cli": "mocha --require coffeescript/register test/*.spec.coffee -s 0",
    "test:nyan": "mocha --require coffeescript/register test/*.spec.coffee -R nyan",
    "test:browser": "open test/test.html",
    "test": "npm-run-all --sequential dev:build:** test:**",
    "eslint": "eslint lib/*.js ./*.js bin/bws-rpc",
    "coffeelint": "coffeelint -f coffeelint.json test/",
    "prepublishOnly": "npm-run-all --sequential prod:build:**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhorology/bitwig-websocket-rpc.git"
  },
  "author": {
    "name": "Masafumi",
    "email": "jhorology2014@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jhorology/bitwig-websocket-rpc/issues"
  },
  "homepage": "https://github.com/jhorology/bitwig-websocket-rpc#readme",
  "bin": {
    "bws-rpc": "./bin/bws-rpc"
  },
  "dependencies": {
    "commander": "^4.0.1",
    "glob": "^7.1.6",
    "js-beautify": "^1.10.2",
    "rimraf": "^3.0.0",
    "rpc-websockets": "^4.6.1",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coffeeify": "^3.0.1",
    "coffeelint": "^2.1.0",
    "coffeescript": "^2.4.1",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "isomorphic-ws": "^4.0.1",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "underscore": "^1.9.1"
  }
}
