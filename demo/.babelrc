{
  "presets": [
    "next/babel"
  ],
  "plugins": [
    ["styled-components", { "ssr": true, "displayName": true, "preprocess": false }],
    ["transform-imports", {
      "grommet-controls": {"transform": "grommet-controls/components/${member}", "preventFullImport": true, "skipDefaultConversion": true },
      "grommet": {
        "transform": "grommet/components/${member}",
        "preventFullImport": true,
        "skipDefaultConversion": true
      },
      "grommet-icons": {
        "transform": "grommet-icons/icons/${member}",
        "preventFullImport": true,
        "skipDefaultConversion": true
      }
    }]
  ],
  "env": {
    "alias": {
      "plugins": [
        [
          "module-resolver", { "alias": {"grommet-controls": "../grommet-controls/src/js" } }
        ]
      ]
    }
  }
}
